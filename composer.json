{
    "name": "squareetlabs/laravel-simple-permissions",
    "description": "A comprehensive Laravel package for advanced permission management. Features RBAC, granular permissions, entity-specific abilities, global groups, audit logging, and seamless Laravel integration.",
    "keywords": [
        "laravel",
        "permissions",
        "rbac",
        "role-based-access-control",
        "authorization",
        "access-control",
        "groups",
        "abilities",
        "entity-permissions",
        "user-management",
        "permission-management",
        "audit-logging",
        "blade-directives",
        "policies",
        "middleware",
        "caching",
        "acl",
        "access-control-list"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Alberto Rial Barreiro",
            "email": "alberto@squareet.com",
            "homepage": "https://www.squareet.com",
            "role": "Developer"
        },
        {
            "name": "Jacobo Cantorna Cigarr√°n",
            "email": "jacobo@squareet.com",
            "homepage": "https://www.squareet.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "illuminate/support": "^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/http": "^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/bus": "^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/mail": "^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/queue": "^8.0|^9.0|^10.0|^11.0|^12.0"
    },
    "autoload": {
        "psr-4": {
            "Squareetlabs\\LaravelSimplePermissions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "stubs/app/",
            "Squareetlabs\\LaravelSimplePermissions\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Squareetlabs\\LaravelSimplePermissions\\SimplePermissionsServiceProvider"
            ],
            "aliases": {
                "SimplePermissions": "Squareetlabs\\LaravelSimplePermissions\\Support\\Facades\\SimplePermissions"
            }
        }
    },
    "require-dev": {
        "orchestra/testbench": "^6.0|^7.0|^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^9.6|^10.5|^11.0",
        "pestphp/pest": "^1.0|^2.0|^3.0",
        "pestphp/pest-plugin-laravel": "^1.0|^2.0|^3.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10|^2.0",
        "larastan/larastan": "^2.0|^3.0",
        "laravel/pint": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}